rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files (for PDF viewing)
    // Require authentication for write/delete operations
    match /{allPaths=**} {
      allow read: if true;  // Public read access
      allow write, delete: if request.auth != null;  // Authenticated write/delete
    }
  }
}
      
      // Allow write only by the user themselves
      allow write: if isAuthenticated() && 
                     hasValidEmail() &&
                     request.auth.uid == userId &&
                     request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                     request.resource.contentType.matches('image/.*');
      
      // Allow delete by user themselves
      allow delete: if isAuthenticated() && 
                      hasValidEmail() &&
                      request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}